<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="Home Automation"
    tools:context=".HomeAutomation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            >

            <ImageButton
                android:id="@+id/imageButton"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#6a89cc"
                android:gravity="center"
                android:onClick="CurtainClose"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/curtain" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#82ccdd"
                android:gravity="center"
                android:onClick="CurtainOpen"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/curtainopen" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4a69bd"
                android:gravity="center"
                android:onClick="Bulb1off"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bulb" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#60a3bc"
                android:gravity="center"
                android:onClick="Bulb1on"
                android:scaleType="fitCenter"
                android:src="@drawable/bulbon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1e3799"
                android:gravity="center"
                android:onClick="Bulb2off"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bulb" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3c6382"
                android:gravity="center"
                android:onClick="Bulb2on"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bulbon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0c2461"
                android:gravity="center"
                android:onClick="Bulb3off"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bulb" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0a3d62"
                android:gravity="center"
                android:onClick="Bulb3on"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bulbon" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>